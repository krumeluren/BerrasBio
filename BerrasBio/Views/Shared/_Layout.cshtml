@using BerrasBio.ViewModels
@using Microsoft.AspNetCore.Identity
@inject UserManager<User> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BerrasBio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BerrasBio.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="_Layout.cshtml.css" asp-append-version="true" />

    <style>
        #nav-item {
            color: #8b8d99;
            text-decoration: none;
            transition: 0.3s all;
            transition-delay: .1s;
        }

            #nav-item:hover {
                color: black;
                transition-delay: 0s;
            }

        #header-menu {
            background-color: white;
            display: flex;
            border-bottom: 1px solid lightgray;
            min-height: 80px;
        }

        @@media (max-width: 500px) {
            #header-menu {
                display: block;
            }

                #header-menu > #header-title {
                    height: 50px;
                    text-align: left;
                    white-space: nowrap;
                    padding-left: 28px;
                }
        }
    </style>

</head>
<body>

    <header id="header-menu">
        <div id="header-title"><h3><a id="nav-item" asp-area="" asp-controller="Start" asp-action="Index">Berras Bio</a> </h3> </div>
        <ul id="navbar"></ul>
        <div class="navbar-expand-sm ">
            <partial name="_LoginPartial" />
        </div>
    </header>

    <partial name="~/Views/User/Login.cshtml" model="new UserLoginModel()" />



    <div class="wrapper">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <footer class="footer text-muted">
        <div class="container">
            &copy; 2022 - Berras Bio
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/7a548851b4.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<script type="text/javascript">

    function openLoginModal(){
        $('#loginModal').modal('show');
    }

    $("#loginModalSubmit").click(function () {
        $("#loginModal").modal('hide');
    });

    $("#loginModalClose").click(function () {
        $("#loginModal").modal('hide');
    });
    
    
    function RenderNavbar() {
      $.ajax({
        url: "../../Navbar/Menu",
        type: "POST",
        success: function (result) {
            document.getElementById("navbar").innerHTML = result;
        },
      });
    }
    RenderNavbar()
</script>
