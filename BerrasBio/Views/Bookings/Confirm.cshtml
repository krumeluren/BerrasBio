@{
}
@model BerrasBio.Models.Show

@{
    var selectedSeats = ViewData["SelectedSeats"] as IEnumerable<Bookable_Seats>;
    if (Model == null || selectedSeats == null) return;

    <dl class="row">
        <dt class="col-sm-2">
            <h4>Översikt</h4>
        </dt>
        <dd class="col-sm-10">

        </dd>
        <dt class="col-sm-2">
            Titel
        </dt>
        <dd class="col-sm-10">
            <h5>@Model.Movie.Title</h5>
        </dd>
        <dt class="col-sm-2">
            Salong
        </dt>
        <dd class="col-sm-10">
            <h6>@Model.Saloon.Name</h6>
        </dd>
        <dt class="col-sm-2">
            Datum
        </dt>
        <dd class="col-sm-10">
            <h6>@Model.ShowTime.ToString("HH:mm d MMMM yyyy ")</h6>
        </dd>
        <dt class="col-sm-2">
            Antal säten
        </dt>
        <dd class="col-sm-10">
            <h6>@selectedSeats.Count() st säten</h6>
        </dd>
        <dt class="col-sm-2">
            Pris
        </dt>
        <dd class="col-sm-10">
            <h5>@selectedSeats.Sum(s => s.Ticket_Price) Totalt</h5>
        </dd>
        <dt class="col-sm-2">
            
        </dt>
        <dd class="col-sm-10">
            <button class="btn btn-primary btn-lg">Boka</button>
        </dd>
    </dl>






}
